{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "stronghold:default",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "fs:default",
    "fs:allow-create",
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "fs:allow-write-text-file",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    "fs:allow-remove",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "core:path:default"
  ]
}
