{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Loremonger",
  "version": "1.2.0",
  "identifier": "com.jobiewong.loremonger",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Loremonger",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["binaries/**/*"]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:database.db"]
    },
    "updater": {
      "endpoints": [
        "https://github.com/jobiewong/loremonger/blob/master/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5QTNFQUExREQ0REYyNEMKUldSTThrM2RvZXFqaVREbFFQc1RhdWZxYWVmMTRUcWFvWkQ1aEMyVWNuYWw4V3hnbWU3eGNwdlgK"
    }
  }
}
