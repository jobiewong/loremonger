{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "rootDir": "./",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": true,
    "compilerOptions": {
      "module": "ES2022"
    }
  }
}
